{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Liste des Albums</h1>
        {% for album in albums %}
            <div class="album">
                <h2 class="text-center">{{ album.titreAlbum }}</h2>
                <h3 class="text-center ">{{ album.artiste }}</h3>
                <p class="text-center">Genre: {{ album.genre }}</p>
                <p class="text-center">Support: {{ album.support }}</p>
                <div class="row">
                    <div class="col-xs-6">
                        <ul class="text-left">
                            <li>
                                <a  class="linkIndex" href="{{ path('album_show', { 'id': album.id }) }}">voir en detail</a>
                            </li>
                            <li>
                                <a class="linkIndex" href="{{ path('album_edit', { 'id': album.id }) }}">modifier la fiche</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-xs-6">
                        <ul class="text-right">
                            <li>
                                <a class="linkIndex" href="{{ path('commentaire_new', { 'id': album.id }) }}">laisser un commentaire</a>
                            </li>
                        </ul>
                    </div>
                </div>
            {% for commentaire in commentaires %}
                <div class="row text-center">
                    <div class="col-lg-12">
                        <h2>Commentaires</h2>
                        <p>Utilisateur: {{ commentaire.utilisateur }}</p>
                        <p>Commentaire: {{ commentaire.commentaire }}</p>
                    </div>
                </div>
            {% endfor %}
                {% endfor %}

            </div>
    <ul class="text-center">
        <li>
            <a class="linkIndex" href="{{ path('album_new') }}">Cr√©er un nouvel album</a>
        </li>
    </ul>
{% endblock %}
